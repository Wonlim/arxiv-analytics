
extends admin

block prepend variables
  - var type = 'articles'

block content
  .ui-grid-70.ui-offset-10.ui-mobile-expand
    form.ui-form-horizontal(data-schema-validate action='/admin/eprints/update' method='get')
      fieldset
        legend Update Eprints
        .ui-container-grid
          label.ui-grid-15(for='category') Category
          .ui-grid-85
            input(id='category' type='text' name='category' placeholder='hep-th' autofocus)
          label.ui-grid-15(for='author') Author
          .ui-grid-85
            input(id='author' type='text' name='author' placeholder='Edward Witten')
          label.ui-grid-15(for='skip') Skip
          .ui-grid-85
            input(id='skip' type='number' name='skip' min='0' step='1000' placeholder='0')
          label.ui-grid-15(for='limit') Limit
          .ui-grid-85
            input(id='limit' type='number' name='limit' value='1000' min='0' step='1000' placeholder='1000')
          .ui-container-grid
            label.ui-grid-15(for='sort') Sort
            .ui-grid-85.ui-skip-tiny
              input(id='sort' type='radio' name='sort' value='submittedDate' checked)
              |  Submitted date
              input.ui-offset-small(type='radio' name='sort' value='lastUpdatedDate')
              |  Last updated date
              input.ui-offset-small(type='radio' name='sort' value='relevance')
              |  Relevance
              label.ui-offset-small
                input(type='checkbox' name='order' value='ascending')
                |  Ascending
        .ui-text-center.ui-skip-large
          button.ui-button-primary(type='submit') Submit
          button.ui-offset-medium(type='reset') Reset
